[core]
    excludesfile = ~/.gitexcludes
[user]
    name = Alessandro DiMarco
    email = axdimarco@gmail.com
[alias]
  co = checkout
  con = log origin/master ^master
  delete-merged-branches = "!git co master && git pull && git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d && git remote prune origin"
  # Show changes that have been staged
  diffc = diff --cached
  # list aliases
  la = "!git config -l | grep alias | cut -c 7-"
  lk = log --oneline --graph --decorate
  publish = "!git push -u origin $(git branch-name)"
  po = remote prune origin
  undo = reset HEAD~
